<% layout('layout/boilerplate')-%>
<div class="row">
    <div class="col-lg-6 mx-auto">
        <br>
        <h1 id="h1">GET IN TOUCH</h1><br>
        <form >
            <div class="mb-3">
                <label class="form-label" for="username">UserName:</label>
                <input class="form-control" type="text" name="username" id="nameBox" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email:</label>
                <input class="form-control" type="email" name="email" id="emailBox" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="message">Message:</label>
                <textarea class="form-control" type="message" name="message" id="msgBox" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary button" id="contactbtn">Send Message</button>
        </form>
    </div>
</div>
<script type="module" src="/JS/config.js"></script>
<script type="module" src="/JS/script.js"></script>
